<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Userprofile">
    <TextView
        android:id="@+id/logoutview"
        android:layout_marginTop="@dimen/dim_10"
        android:text="Log out"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
    </TextView>
   <LinearLayout
       android:layout_weight="1"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginTop="@dimen/dim_10"
           android:text="MyMdbs User Profile"
           android:textSize="@dimen/dim_20"
           android:textStyle="bold"
           android:textColor="@color/background"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/userprofile"
           android:layout_marginTop="@dimen/dim_20"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/profile_image"
           app:civ_border_width="2dp"
           app:civ_border_color="@color/background"
           android:layout_gravity="center"
           >
       </de.hdodenhof.circleimageview.CircleImageView>
       <TextView
           android:id="@+id/userenm"
           android:layout_marginTop="@dimen/dim_15"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/profileRec"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </androidx.recyclerview.widget.RecyclerView>
       <ImageView
           android:id="@+id/emoj"
           android:layout_marginTop="@dimen/dim_10"
           android:layout_gravity="center"
           android:background="@drawable/emoji"
           android:layout_width="@dimen/dim_130"
           android:layout_height="@dimen/dim_130">
       </ImageView>
       <TextView
           android:layout_weight="1"
           android:id="@+id/notif"
           android:layout_marginLeft="@dimen/dim_10"
           android:layout_marginTop="@dimen/dim_10"
           android:text="you don't have notification
                     yet"
           android:textSize="@dimen/dim_30"
           android:textStyle="bold"
           android:textColor="@color/background"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
   </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        app:menu="@menu/nav_items"
        app:itemTextColor="@color/seekbar"
        app:itemIconTint="@color/seekbar"
       android:layout_alignParentBottom="true"
        android:backgroundTintMode="src_over"
        app:itemBackground="@color/colorPrimaryDark"
        app:labelVisibilityMode="labeled"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>