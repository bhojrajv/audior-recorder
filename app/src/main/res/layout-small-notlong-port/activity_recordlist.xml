<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordlistActivity">
  <androidx.appcompat.widget.Toolbar
      android:layout_weight="1"
      android:id="@+id/mdbstool"
      android:background="@color/colorPrimaryDark"
      app:navigationIcon="@drawable/arrow"
      app:title="MdbsRecording list"
      app:titleTextColor="#ffffff"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recordRec"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/linlay"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Chronometer
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:id="@+id/startTm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                ></Chronometer>

            <SeekBar
                android:layout_weight="1"
                android:id="@+id/bottomseek"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:thumbTint="@color/progressthumb"
                android:progressTint="@color/progressthumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></SeekBar>

            <Chronometer
                android:layout_weight="1"
                android:id="@+id/endTm"
                android:textColor="#ffffff"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                ></Chronometer>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous"
                android:layout_marginLeft="40dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/previous"></ImageButton>

            <ImageButton
                android:id="@+id/playPause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="90dp"
                android:background="@mipmap/ic_play"></ImageButton>
            <ImageButton
                android:id="@+id/btnnext"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/next3"></ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>