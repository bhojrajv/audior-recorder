<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignIn">

    <ImageView
        android:layout_width="@dimen/dim_120"
        android:layout_height="@dimen/dim_120"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/mdbs"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="cursive"
        android:text="My MDBS Sign In"
        android:textColor="@color/crono"
        android:textSize="@dimen/dim_25"
        android:textStyle="italic"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/eamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_40"
        android:layout_marginRight="@dimen/dim_10"
         app:passwordToggleEnabled="true"
        android:hint="User Name/Enter your Email"
       >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/seekbar"
        app:boxStrokeWidth="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_15"
        android:layout_marginRight="@dimen/dim_10"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:drawableStart="@drawable/password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


   <LinearLayout
       android:layout_marginTop="@dimen/dim_20"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/signbtn"
           android:layout_marginLeft="@dimen/dim_20"
           android:layout_marginRight="@dimen/dim_20"
           android:layout_marginTop="@dimen/dim_20"
           android:layout_width="@dimen/dim_300"
           android:layout_height="@dimen/dim_45"
           android:layout_gravity="center"
           android:layout_margin="@dimen/dim_1"
           android:background="@drawable/btnround"
           android:text="Sign In"
           android:textColor="@color/progressthumb"
           android:textSize="@dimen/dim_20"
           android:textStyle="bold"></Button>
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/stroePref"
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:layout_marginLeft="@dimen/dim_5"></CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_weight="1"
            android:text="Remember me"
            android:textColor="@color/crono"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/SinupView"
            android:layout_marginLeft="@dimen/dim_130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dim_5"
            android:text="Sign Up"
            android:textColor="@color/crono"
            android:textStyle="normal"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/forgotview"
        android:textColorHint="@color/seekbar"
     android:fontFamily="sans-serif-condensed"
        android:layout_width="@dimen/dim_190"
        android:layout_height="@dimen/dim_40"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_10"
        android:text="forgot password"
        android:textColor="@color/crono"
        android:textSize="@dimen/dim_20"
        android:textStyle="bold"></TextView>
    <View
        android:layout_marginTop="-15dp"
        android:background="@color/crono"
        android:layout_marginLeft="@dimen/dim_30"
        android:layout_width="@dimen/dim_145"
        android:layout_height="@dimen/dim_1">
    </View>
</LinearLayout>