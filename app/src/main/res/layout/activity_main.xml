<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mainTool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:titleTextColor="#ffffff"></androidx.appcompat.widget.Toolbar>

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/coursel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_140"
                android:layout_margin="@dimen/dim_2"
                android:fitsSystemWindows="true"
                android:minWidth="4dp"
                android:minHeight="4dp"
                app:autoPlay="true"
                app:fillColor="@color/seekbar"
                app:pageColor="@color/seekbar"
                app:radius="5dp"
                app:slideInterval="3000"
                app:strokeColor="@color/seekbar"
                app:strokeWidth="2dp"></com.synnapps.carouselview.CarouselView>

            <Chronometer
                android:id="@+id/chrono"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/roundchrono"
                android:paddingTop="45dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"></Chronometer>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/resumBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/resum32"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/stopBtn"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/stop2"
                    android:visibility="gone"

                    />

                <ImageButton
                    android:id="@+id/pauseBtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/pause2"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/recordbtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/mdbsmic"></ImageButton>

            <Button
                android:id="@+id/uplaodbtn"
                android:layout_width="@dimen/dim_200"
                android:layout_height="@dimen/dim_40"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btnround"
                android:text="Upload file"
                android:textColor="#ffffff"
                android:textStyle="bold"></Button>

            <TextView
                android:id="@+id/recordNm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/prev"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/prev2"></ImageButton>

                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/next3"></ImageButton>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            app:menu="@menu/nav_items"
            app:itemIconTint="@color/seekbar"
            android:fitsSystemWindows="true"
            app:itemTextColor="#ffffff"
            app:itemBackground="@color/colorPrimaryDark"
            app:labelVisibilityMode="labeled"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>
