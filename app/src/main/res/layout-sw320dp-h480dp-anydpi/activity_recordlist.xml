<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordlistActivity">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/mdbstool"
      android:background="@color/colorPrimaryDark"
      app:navigationIcon="@drawable/whitearrow"
      app:title="MdbsRecording list"
      app:titleTextColor="@color/seekbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recordRec"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/linlay"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Chronometer
                android:layout_marginTop="15dp"
                android:textColor="@color/seekbar"
                android:id="@+id/startTm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                ></Chronometer>

            <SeekBar
                android:layout_weight="1"
                android:id="@+id/bottomseek"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:thumbTint="@color/seekbar"
                android:progressTint="@color/seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></SeekBar>

            <Chronometer
                android:id="@+id/endTm"
                android:textColor="@color/seekbar"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                ></Chronometer>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous"
                android:layout_marginLeft="@dimen/dim_40"
                android:layout_width="@dimen/dim_42"
                android:layout_height="@dimen/dim_42"
                android:background="@drawable/whiteprev"></ImageButton>

            <ImageButton
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:id="@+id/playPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dim_60"
                android:background="@drawable/mdbsplay"></ImageButton>
            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/btnnext"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/whitenext"></ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>